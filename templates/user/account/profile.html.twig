{% extends 'base.html.twig' %}

{% block title 'My account' %}

{% block content %}

    <div class="container">
        <h1>Edit profile</h1>

        {% if app.user %}
            <h2>Your avatar</h2>
            <img src="/img/{{ app.user.avatar }}" class="" alt="Avatar de {{ app.user.username }}" style="width: auto; height: 200px;">
        {% endif %}

        {{ form_start(form) }}
        {{ form_widget(form) }}

        <button class="btn btn-danger"><a href="{{ path('account_password') }}" style="color: white;">Change your password</a></button>


        <div class="float-right">
        <button type="submit" class="btn btn-primary">Save</button>
        </div>

        {{ form_end(form) }}
    </div>

{% endblock %}